<h3><span style="color:blue">Post a Comment</h3>

<%= form_for @comment do |f| %>
  <%= f.hidden_field :article_id %>
  <p>
    <%= f.label :author_name, "your name" %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>